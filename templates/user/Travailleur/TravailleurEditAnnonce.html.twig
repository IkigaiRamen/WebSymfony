{% extends 'base.html.twig' %}
{% block head %} {% block stylesheet %} {{ parent() }}{% endblock %} {% endblock %}
{% block body %}
    {% block con %}    {{ parent() }} {% endblock %}
    <!-- Breadcrumb -->
    <div class="alice-bg padding-top-70 padding-bottom-70">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="breadcrumb-area">
                        <h1>Modifier Votre Annonce</h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Accueil</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Modifier Votre annonce</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="breadcrumb-form">
                        <form action="#">
                            <input type="text" placeholder="Enter Keywords">
                            <button><i data-feather="search"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->
    <div class="alice-bg section-padding-bottom">
        <div class="container no-gliters">
            <div class="row no-gliters">
                <div class="col">
                    <div class="dashboard-container">
                        <div class="dashboard-content-wrapper">
                            {{form_start(form , {'attr' : {'class' :'dashboard-form job-post-form'}})}}
                            <div class="dashboard-section basic-info-input">
                                <h4><i data-feather="user-check"></i>Rechercher emploi</h4>
                                <div class="form-group row">
                                    <label class="col-md-3 col-form-label">Titre d'annonce</label>
                                    <div class="col-md-9">
                                        {{ form_widget(form.titre, {'attr': {'class': 'form-control' , } }) }}
                                    </div>
                                </div>
                                <div class="row">
                                    <label class="col-md-3 col-form-label">Résume d'emploi</label>
                                    <div class="col-md-9">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    {% set placeholder ='app.user.etat' %}
                                                    {{ form_widget(form.categorie, {'attr': {'class': 'form-control' ,'placeholder': placeholder } }) }}
                                                    <i class="fa fa-caret-down"></i>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    {{ form_widget(form.city, {'attr': {'class': 'form-control' } }) }}
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    {{ form_widget(form.type, {'attr': {'class': 'form-control' } }) }}

                                                    <i class="fa fa-caret-down"></i>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    {{ form_widget(form.exp, {'attr': {'class': 'form-control' } }) }}

                                                    <i class="fa fa-caret-down"></i>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    {{ form_widget(form.salairemin, {'attr': {'class': 'form-control' ,'Placeholder':'Salaire desiré minimum' } }) }}
                                                    {{ form_widget(form.salairemax, {'attr': {'class': 'form-control' ,'Placeholder':'Salaire desiré maximum' } }) }}

                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    {{ form_widget(form.qualification, {'attr': {'class': 'form-control' } }) }}

                                                    <i class="fa fa-caret-down"></i>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    {{ form_widget(form.sex, {'attr': {'class': 'form-control' } }) }}
                                                    </select>
                                                    <i class="fa fa-caret-down"></i>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group datepicker">
                                                    {{ form_widget(form.expire, {'attr': {'class': 'form-control' } }) }}
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <label class="col-md-3 col-form-label">Parlez de vous</label>
                                    <div class="col-md-9">
                                        {{ form_widget(form.description, {'attr': {'class': 'tinymce-editor tinymce-editor-1' } }) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        {{ form_widget(form.chercher, {'attr': {'class': 'button'} }) }}
                                    </div>
                                </div>
                            </div>
                            {{form_end(form)}}
                        </div>
                        {%block sidebar%}    {{ parent() }}
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% block action %} {{ parent() }} {% endblock %}
    {% block footer %} {{ parent() }} {% endblock %}




{% endblock %}