{% extends 'base.html.twig' %}

{% block title %}Choix index{% endblock %}

{% block body %}
    <h1>Choix index</h1>

    <table class="table table-hover table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Correct</th>
                <th>Contenu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for choix in choixes %}
            <tr>
                <td>{{ choix.id }}</td>
                <td>{{ choix.correct ? 'Yes' : 'No' }}</td>
                <td>{{ choix.contenu }}</td>
                <td>
                    <a href="{{ path('app_choix_show', {'id': choix.id}) }}">show</a>
                    <a href="{{ path('app_choix_edit', {'id': choix.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_choix_new') }}">Create new</a>
{% endblock %}
