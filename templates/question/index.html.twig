{% extends 'back.html.twig' %}


{% block body %}
    <h1>Question index</h1>

    <table class="table table-hover table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Score</th>
                <th>Enonce</th>
                <th>Datemodification</th>
                <th>Datecreation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>
                <td>{{ question.id }}</td>
                <td>{{ question.score }}</td>
                <td>{{ question.enonce }}</td>
                <td>{{ question.datemodification ? question.datemodification|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ question.datecreation ? question.datecreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_question_show', {'id': question.id}) }}">show</a>
                    <a href="{{ path('app_question_edit', {'id': question.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_question_newg') }}">Create new</a>
{% endblock %}
