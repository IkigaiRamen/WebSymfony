{% extends 'back.html.twig' %}

{% block body %}
    <h1>Liste des certifications</h1>

    <table class="table table-hover table-bordered table-striped">
        <thead class="table-header">
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Type</th>
                <th>Maxscore</th>
                <th>Nbrtentative</th>
                <th>Duree</th>
                <th>Datecreation</th>
                <th>Datemodification</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for test in tests %}
            <tr>
                <td>{{ test.id }}</td>
                <td>{{ test.titre }}</td>
                <td>{{ test.type }}</td>
                <td>{{ test.maxscore }}</td>
                <td>{{ test.nbrtentative }}</td>
                <td>{{ test.duree }}</td>
                <td>{{ test.datecreation ? test.datecreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ test.datemodification ? test.datemodification|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_test_show', {'id': test.id}) }}">show</a>
                    <a href="{{ path('app_test_edit', {'id': test.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_test_newcertif')}}">Create new</a>
{% endblock %}
