{% extends 'base.html.twig' %}

{% block title %}Test{% endblock %}

{% block body %}
    <h1>Test</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ test.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ test.titre }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ test.type }}</td>
            </tr>
            <tr>
                <th>Maxscore</th>
                <td>{{ test.maxscore }}</td>
            </tr>
            <tr>
                <th>Nbrtentative</th>
                <td>{{ test.nbrtentative }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ test.duree }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{{ test.datecreation ? test.datecreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Datemodification</th>
                <td>{{ test.datemodification ? test.datemodification|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>questions</th>
             
             {% for question in test.questions %}
                <td><a href="{{ path('app_question_show', {'id':question.id}) }}"> {{question.enonce}}</a></td>
            {% endfor %}
              
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_test_index') }}">back to list</a>

    <a href="{{ path('app_test_edit', {'id': test.id}) }}">edit</a>

    {{ include('test/_delete_form.html.twig') }}
{% endblock %}
