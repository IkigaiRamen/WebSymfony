{% extends 'back.html.twig'%}

{%block body%}
<style> 

        .testContainer {
            border-radius: 15px;
            background: #3D27A7;
            padding: 20px;
            width: 65vw;
            overflow: auto;
            display: block;
            text-align: center;
        }

        .questionContainer {
            border-radius: 15px;
            background: #00CED1;
            padding: 20px;
            width: 80vw;
            overflow: auto;
            display: block;
            text-align: center;

        }           
        .correct {
            float: right;
        }     
        .titre{
            color: white;
        }
        #btnCreer{
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .form-floating{
            margin-top: 20px;
            margin-bottom: 20px;
        }

    </style> 

    <div class="alice-bg padding-top-70 padding-bottom-70">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="breadcrumb-area">
                        <h1>Créer une nouvelle Certification</h1>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="breadcrumb-form">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->

    <div class="alice-bg section-padding-bottom">
        <div class="container no-gliters">
            <div class="row no-gliters">
            <center>
    <br>
    <br>
    <div class="testContainer">
        {#{{ include('test/_form.html.twig')}} #}
        <form id="form" method="post" action="{{ path('app_test_newcertif') }}" enctype="multipart/form-data">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
                <h1 class="mb-5 titre">Créer Certification</h1>
            </div>
            <div class="form-floating">
                <input type="text" class="form-control" id="Titre" name="titre" placeholder="Titre..." required>
                <label for="titre">Titre</label>
                
            </div>
            <div class="form-floating">
                <input type="number" class="form-control" id="nbrTent" name="nbrTent" min=1 required
                    oninput="validity.valid||(value='');">
                    <label for="nbrTent">Nombre de tentatives</label>     
           </div>
           <div class="form-floating">
                <input type="number" class="form-control" id="duree" name="duree" min=3 max=240 required
                oninput="validity.valid||(value='');">
                <label for="duree">Durée (en minutes)</label>
           </div>
					<button id="btnCreer" class="btn btn-primary w-100 py-3" type="submit">Créer</button>

        </form>

    </div>
    <a href="{{ path('app_test_index') }}">back to list</a>
    </center>

            </div>
        </div>
    </div>
{%endblock%}

