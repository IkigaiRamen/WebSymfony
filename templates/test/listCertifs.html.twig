{% extends 'base3.html.twig'%}

{% block title %}Test index{% endblock %}

{% block body %}
    <h1>Liste des certifications</h1>

    <table class="table table-hover table-bordered table-striped">
        <thead class="table-header">
            <tr>
                <th>Titre</th>
                <th>Nbrtentative</th>
                <th>Duree</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for test in tests %}
            <tr>
                <td>{{ test.titre }}</td>
                <td>{{ test.nbrtentative }}</td>
                <td>{{ test.duree }}</td>
                <td>
                    <a href="{{ path('app_test_pass', {'id': test.id}) }}">Passer </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_test_new', {'userId':7}) }}">Create new</a>
{% endblock %}
