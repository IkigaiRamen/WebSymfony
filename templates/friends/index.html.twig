{% extends 'base.html.twig' %}

{% block title %}Friends index{% endblock %}

{% block body %}
    <h1>Friends index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for friend in friends %}
            <tr>
                <td>{{ friend.id }}</td>
                <td>{{ friend.createdAt ? friend.createdAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_friends_show', {'id': friend.id}) }}">show</a>
                    <a href="{{ path('app_friends_edit', {'id': friend.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_friends_new') }}">Create new</a>
{% endblock %}
