{% block title %}Annonce index{% endblock %}

{% block body %}
    <h1>Annonce index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Location</th>
                <th>Type</th>
                <th>Exp</th>
                <th>Salairemin</th>
                <th>Salairemax</th>
                <th>Qualification</th>
                <th>Sex</th>
                <th>Description</th>
                <th>Eduexp</th>
                <th>Responsibilities</th>
                <th>Autres</th>
                <th>Country</th>
