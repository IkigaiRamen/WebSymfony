{% extends 'back.html.twig' %}

{% block title %}Annonce index{% endblock %}

{% block body %}
    <h1>Annonce index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Adresse</th>
                <th>Type</th>
                <th>Experience</th>
                <th>Salaire minimal</th>
                <th>Salaire maximale</th>
                <th>Qualification</th>
                <th>Sexe</th>
                <th>Description</th>
                <th>Education</th>
                <th>Responsabilités</th>
                <th>Country</th>
                <th>City</th>
                <th>Créer le</th>
                <th>Expire le</th>
                <th>Categorie</th>
                <th>Autres</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td>{{ annonce.id }}</td>
                <td>{{ annonce.titre }}</td>
                <td>{{ annonce.location }}</td>
                <td>{{ annonce.type }}</td>
                <td>{{ annonce.exp }}</td>
                <td>{{ annonce.salairemin }}</td>
                <td>{{ annonce.salairemax }}</td>
                <td>{{ annonce.qualification }}</td>
                <td>{{ annonce.sex }}</td>
                <td>{{ annonce.description }}</td>
                <td>{{ annonce.eduexp }}</td>
                <td>{{ annonce.responsibilities }}</td>
                <td>{{ annonce.country }}</td>
                <td>{{ annonce.city }}</td>
                <td>{{ annonce.createdAt ? annonce.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ annonce.expire ? annonce.expire|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ annonce.categorie }}</td>
                <td>{{ annonce.autres }}</td>
                <td>
                    <a href="{{ path('annonce_back_show', {'id': annonce.id}) }}">Afficher</a>
                    <a href="{{ path('annonce_back_edit', {'id': annonce.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="19">Pas d'annonce</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('annonce_back_new') }}">Créer nouvelle annonce</a>
{% endblock %}
