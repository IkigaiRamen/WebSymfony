                <th>Expire</th>
                <th>Created_at</th>
                <th>Categorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td>{{ annonce.id }}</td>
                <td>{{ annonce.titre }}</td>
                <td>{{ annonce.location }}</td>
                <td>{{ annonce.type }}</td>
                <td>{{ annonce.exp }}</td>
                <td>{{ annonce.salairemin }}</td>
                <td>{{ annonce.salairemax }}</td>
                <td>{{ annonce.qualification }}</td>
                <td>{{ annonce.sex }}</td>
                <td>{{ annonce.description }}</td>
                <td>{{ annonce.eduexp }}</td>
                <td>{{ annonce.responsibilities }}</td>
                <td>{{ annonce.autres }}</td>
                <td>{{ annonce.country }}</td>
                <td>{{ annonce.city }}</td>
