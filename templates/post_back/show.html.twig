{% extends 'back.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdPost</th>
                <td>{{ post.idPost }}</td>
            </tr>
            <tr>
                <th>DateP</th>
                <td>{{ post.dateP ? post.dateP|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td>
            </tr>
            <tr>
                <th>Reaction</th>
                <td>{{ post.reaction ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ post.image }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ post.etat }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_post_back_index') }}">back to list</a>

    <a href="{{ path('app_post_back_edit', {'idPost': post.idPost}) }}">edit</a>

    {{ include('post_back/_delete_form.html.twig') }}
{% endblock %}
