{% extends 'back.html.twig' %}

{% block title %}Postule index{% endblock %}

{% block body %}
    <h1>Postule index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for postule in postules %}
            <tr>
                <td>{{ postule.id }}</td>
                <td>{{ postule.createdAt ? postule.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_postule_back_show', {'id': postule.id}) }}">show</a>
                    <a href="{{ path('app_postule_back_edit', {'id': postule.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_postule_back_new') }}">Create new</a>
{% endblock %}
